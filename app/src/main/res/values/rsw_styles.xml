<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RSW.NotImplementedView" parent="">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="messageTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.RSW.BottomSheet.Dark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rsw_bottomsheet_background_dark</item>
    </style>

    <style name="Widget.RSW.BottomSheet.Light" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rsw_bottomsheet_background_light</item>
    </style>

    <style name="Widget.RSW.NativeAlert.Title" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="Widget.RSW.AppBarLayout" parent="Widget.Design.AppBarLayout" />

    <style name="Widget.RSW.AppBarLayout.AsBackground">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.RSW.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/rsw_color_white</item>
        <item name="itemIconTint">@color/rsw_bottom_navigation_icon_text_tint</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.RSW.SpecialCaption.Dp.Brand</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.RSW.SpecialCaption.Dp.Secondary</item>
        <item name="itemTextColor">@color/rsw_bottom_navigation_icon_text_tint</item>
    </style>

    <style name="Widget.RSW.BottomNavigation.Secondary" parent="Widget.RSW.BottomNavigation">
        <item name="android:background">@color/rsw_color_white</item>
    </style>

    <style name="Widget.RSW.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
    </style>

</resources>