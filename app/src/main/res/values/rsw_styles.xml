<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RSW.NotImplementedView" parent="">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="messageTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Theme.RSW.Dialog.Dark" parent="Theme.RSW.Dark">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/rsw_dialog_background_dark</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/Widget.RSW.NativeAlert.Title</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:listDivider">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/abc_floating_window_z</item>
    </style>

    <style name="Theme.RSW.Dialog.Dark.Alert" parent="Theme.RSW.Dialog.Dark">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColorPrimary">?android:attr/textColorSecondary</item>
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="android:letterSpacing">-0.023333333</item>
    </style>

    <style name="Theme.RSW.Dialog.Light" parent="Theme.RSW.Light">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/rsw_dialog_background_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/Widget.RSW.NativeAlert.Title</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:listDivider">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/abc_floating_window_z</item>
    </style>

    <style name="Theme.RSW.Dialog.Light.Alert" parent="Theme.RSW.Dialog.Light">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="android:letterSpacing">-0.023333333</item>
    </style>

    <style name="Theme.RSW.BottomSheetDialog.Dark" parent="Theme.RSW.Dialog.Dark">
        <item name="android:colorBackground">@color/rsw_color_graphite_8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.RSW.BottomSheet.Dark</item>
    </style>

    <style name="Theme.RSW.BottomSheetDialog.Light" parent="Theme.RSW.Dialog.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.RSW.BottomSheet.Light</item>
    </style>

    <style name="Widget.RSW.BottomSheet.Dark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rsw_bottomsheet_background_dark</item>
    </style>

    <style name="Widget.RSW.BottomSheet.Light" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rsw_bottomsheet_background_light</item>
    </style>

    <style name="Widget.RSW.NativeAlert.Title" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>
</resources>