<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RSW.DesignLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/rsw_color_white</item>
        <item name="android:windowBackground">@color/rsw_color_white</item>
        <item name="appBarLayoutStyle">@style/Widget.RSW.AppBarLayout.AsBackground</item>
        <item name="bottomNavigationStyle">@style/Widget.RSW.BottomNavigation</item>
        <item name="textInputStyle">@style/Widget.RSW.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.RSW.Toolbar</item>
    </style>

    <style name="Theme.RSW.BaseApi.Light" parent="Theme.RSW.DesignLight">
        <item name="alertDialogTheme">@style/Theme.RSW.Dialog.Light.Alert</item>
        <item name="bottomSheetDialogTheme">@style/Theme.RSW.BottomSheetDialog.Light</item>
        <item name="colorSecondary">@color/rsw_color_orange_5</item>
        <item name="colorOnSecondary">@color/rsw_color_orange_0</item>
        <item name="colorPrimary">@color/rsw_color_blue_5</item>
        <item name="colorPrimaryDark">@color/rsw_color_blue_6</item>
        <item name="colorOnPrimary">@color/rsw_color_blue_0</item>
        <item name="dialogTheme">@style/Theme.RSW.Dialog.Light</item>
        <item name="notImplementedViewStyle">@style/Widget.RSW.NotImplementedView</item>
    </style>

    <style name="Theme.RSW.DesignDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/rsw_color_graphite_9</item>
        <item name="android:windowBackground">@color/rsw_color_graphite_9</item>
        <item name="android:navigationBarColor">@color/rsw_color_graphite_9</item>
        <item name="appBarLayoutStyle">@style/Widget.RSW.AppBarLayout.AsBackground</item>
        <item name="bottomNavigationStyle">@style/Widget.RSW.BottomNavigation</item>
        <item name="textInputStyle">@style/Widget.RSW.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.RSW.Toolbar</item>
    </style>

    <style name="Theme.RSW.BaseApi.Dark" parent="Theme.RSW.DesignDark">
        <item name="alertDialogTheme">@style/Theme.RSW.Dialog.Dark.Alert</item>
        <item name="bottomSheetDialogTheme">@style/Theme.RSW.BottomSheetDialog.Dark</item>
        <item name="colorSecondary">@color/rsw_color_orange_5</item>
        <item name="colorOnSecondary">@color/rsw_color_orange_0</item>
        <item name="colorPrimary">@color/rsw_color_blue_5</item>
        <item name="colorPrimaryDark">@color/rsw_color_graphite_8</item>
        <item name="colorOnPrimary">@color/rsw_color_blue_0</item>
        <item name="dialogTheme">@style/Theme.RSW.Dialog.Dark</item>
        <item name="notImplementedViewStyle">@style/Widget.RSW.NotImplementedView</item>
    </style>

    <style name="Theme.RSW.Dark" parent="Theme.RSW.BaseApi.Dark" />
    <style name="Theme.RSW.Light" parent="Theme.RSW.BaseApi.Light" />
    <style name="Theme.RSW.DayNight" parent="Theme.RSW.Light" />

    <style name="Theme.RSW.Dialog.Dark" parent="Theme.RSW.Dark">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/rsw_dialog_background_dark</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/Widget.RSW.NativeAlert.Title</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:navigationBarColor">@color/rsw_color_graphite_9</item>
        <item name="android:listDivider">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/abc_floating_window_z</item>
    </style>

    <style name="Theme.RSW.Dialog.Dark.Alert" parent="Theme.RSW.Dialog.Dark">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="android:letterSpacing">-0.023333333</item>
    </style>

    <style name="Theme.RSW.Dialog.Light" parent="Theme.RSW.Light">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowBackground">@drawable/rsw_dialog_background_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/Widget.RSW.NativeAlert.Title</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:listDivider">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/abc_floating_window_z</item>
    </style>

    <style name="Theme.RSW.Dialog.Light.Alert" parent="Theme.RSW.Dialog.Light">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
        <item name="android:letterSpacing">-0.023333333</item>
    </style>

    <style name="Theme.RSW.BottomSheetDialog.Dark" parent="Theme.RSW.Dialog.Dark">
        <item name="android:colorBackground">@color/rsw_color_graphite_8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.RSW.BottomSheet.Dark</item>
    </style>

    <style name="Theme.RSW.BottomSheetDialog.Light" parent="Theme.RSW.Dialog.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.RSW.BottomSheet.Light</item>
    </style>

</resources>